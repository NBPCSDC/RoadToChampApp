<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape
                android:shape="ring"
                android:thicknessRatio="?attr/progressBarThickness"
                android:useLevel="false"
                android:angle="90">>

                <solid android:color="?attr/progressBackgroundColor" />
            </shape>
        </item>

        <item>
            <rotate
                android:fromDegrees="270"
                android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="?attr/progressBarThickness"
                android:useLevel="true"
                android:angle="90">>
                <solid android:color="?attr/progressColor"/>
            </shape>
            </rotate>
        </item>
    </layer-list>